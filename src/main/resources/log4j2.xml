<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <!-- Console Appender -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} %-5level %logger{1} - %msg%n" />
        </Console>
    </Appenders>
    <Loggers>
        <!-- Loggers Configuration -->
        <Root level="error">
            <AppenderRef ref="Console" />
        </Root>
        
