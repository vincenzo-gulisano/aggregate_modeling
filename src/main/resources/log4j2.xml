        </Logger>
        <Logger name="com.vincenzogulisano.usecases.linearroad.SourceReadFromFile" level="debug" additivity="false" includeLocation="true">
            <AppenderRef ref="Console" />
        </Logger>
        <Logger name="com.vincenzogulisano.util.ThreadCPUMonitor" level="debug" additivity="false" includeLocation="true">
